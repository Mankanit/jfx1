<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="240.0" prefWidth="250.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo2.HelloController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <HBox prefHeight="23.0" prefWidth="350.0" spacing="10">
        <TextField fx:id="inputField" prefWidth="250"
                   promptText="Send"
                   text="Send1"

                   onAction="#handleButtonSend"/>

        <Button text="_Send" alignment="BASELINE_CENTER" prefWidth="63.0"
                onAction="#handleButtonSend"/>


    </HBox>
    <TextArea fx:id="outputField" prefHeight="200.0" prefWidth="200.0"
              promptText="Receive"/>

    <Button text="_Clear" alignment="BASELINE_CENTER" prefWidth="63.0"
            onAction="#handleButtonClear"/>


</VBox>
